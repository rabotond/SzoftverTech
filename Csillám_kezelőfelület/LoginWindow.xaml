<Window x:Class="Csillám_kezelőfelület.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginWindow" Height="149.254" Width="300">
    <Grid>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="23" Margin="108,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" Text="{Binding Username}"/>
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top"/>
        <Button Content="Belépés" HorizontalAlignment="Left" Margin="28,88,0,0" VerticalAlignment="Top" Width="75" Click="BelépésClick"/>
        <Button Content="Mégse" HorizontalAlignment="Left" Margin="184,88,0,0" VerticalAlignment="Top" Width="75" Click="MégseClick"/>
        <PasswordBox x:Name="passwordBoxJelszó" HorizontalAlignment="Left" Margin="108,53,0,0" VerticalAlignment="Top" Width="151" Height="23"/>

    </Grid>
</Window>
