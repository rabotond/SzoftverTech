<Window x:Class="Csillamponi_Allatmenhely.AdministrationPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdministrationPage" Height="415" Width="698">
    <Grid>
        <ListBox x:Name="ügyfelek" ItemsSource="{Binding Ügyfelek}" SelectedItem="{Binding Path ValasztottElem}" HorizontalAlignment="Left" Height="261" Margin="22,28,0,0" VerticalAlignment="Top" Width="200"/>
        <ListBox x:Name="állatok" ItemsSource="{Binding Allatok}"  SelectedItem="{Binding ValasztottElem}" HorizontalAlignment="Left" Height="261" Margin="252,28,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Ügyfelek" HorizontalAlignment="Left" Margin="22,2,0,0" VerticalAlignment="Top"/>
        <Label Content="Állatok" HorizontalAlignment="Left" Margin="252,0,0,0" VerticalAlignment="Top"/>
        <Button Content="Kimutatás Készítés" HorizontalAlignment="Left" Margin="475,28,0,0" VerticalAlignment="Top" Width="136" Height="26" Click="Kimutatas_Click"/>
        <Button Content="Eledelek Kezelése" HorizontalAlignment="Left" Margin="475,59,0,0" VerticalAlignment="Top" Width="136" Height="23"/>
        <Button Content="Új Ügyfél" HorizontalAlignment="Left" Margin="22,305,0,0" VerticalAlignment="Top" Width="75" Click="Ujugyfel_Click"/>
        <Button Content="Törlés" HorizontalAlignment="Left" Margin="147,305,0,0" VerticalAlignment="Top" Width="75" Click="UgyfeletTöröl_Click"/>
        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="22,341,0,0" VerticalAlignment="Top" Width="75" Click="uygfelmodosit_Click"/>
        <Button Content="Új Állat" HorizontalAlignment="Left" Margin="252,305,0,0" VerticalAlignment="Top" Width="75" Click="UjallatClick"/>
        <Button Content="Törlés" HorizontalAlignment="Left" Margin="377,305,0,0" VerticalAlignment="Top" Width="75" Click="AllatTöröl_Click"/>
        <Button Content="Módosítás" HorizontalAlignment="Left" Margin="252,341,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Frissítés" HorizontalAlignment="Left" Margin="625,10,0,0" VerticalAlignment="Top" Width="55" Height="365" Click="Frissit_Click"/>

    </Grid>
</Window>
