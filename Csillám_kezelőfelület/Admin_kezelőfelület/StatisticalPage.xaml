<Window x:Class="Csillamponi_Allatmenhely.StatisticalPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StatisticalPage" Height="365" Width="585">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="122" Margin="51,37,0,0" VerticalAlignment="Top" Width="221">
            <Label Content="Kimutatás Típusa:" FontSize="20"/>
            <RadioButton x:Name="adomanyos" Content="Adomány" FontSize="20"/>
            <RadioButton x:Name="állományos" Content="Állatállomány" FontSize="20"/>
            <RadioButton x:Name="összetett" Content="Összetett" FontSize="20"/>
        </StackPanel>
        <Label Content="Mettől" HorizontalAlignment="Left" Margin="51,164,0,0" VerticalAlignment="Top" Width="221" Height="33"/>
        <DatePicker x:Name="kezdet" HorizontalAlignment="Left" Margin="51,197,0,0" VerticalAlignment="Top" Width="221" Height="34"/>
        <Label Content="Meddig" HorizontalAlignment="Left" Margin="51,231,0,0" VerticalAlignment="Top" Width="221" Height="31"/>
        <DatePicker x:Name="vege" HorizontalAlignment="Left" Margin="51,262,0,0" VerticalAlignment="Top" Width="221" Height="34"/>
        <Button Content="Kimutatás Készítés xml" HorizontalAlignment="Left" Margin="320,37,0,0" VerticalAlignment="Top" Width="247" Height="60" Click="statisztikaToXML_Click"/>
        <Button Content="Kimutatás megtekintése" HorizontalAlignment="Left" Margin="320,102,0,0" VerticalAlignment="Top" Width="247" Height="60" Click="statisztikaOnGUI_Click"/>
        <Button Content="Vissza" HorizontalAlignment="Left" Margin="320,240,0,0" VerticalAlignment="Top" Width="247" Height="56" Click="Visssza_Click"/>

    </Grid>
</Window>
