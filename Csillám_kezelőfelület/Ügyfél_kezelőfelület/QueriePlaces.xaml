<Window x:Class="Csillamponi_Allatmenhely.QueriePlaces"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QueriePlaces" Height="120" Width="352"  Loaded="Window_Loaded">
    <Grid>
        <Label Content="Állatfaj:" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" FontSize="18" Height="32"/>

        <Button Content="OK" HorizontalAlignment="Left" Margin="103,51,0,0" VerticalAlignment="Top" Width="75" FontSize="12" Click="OK_Click" Height="28"/>
        <ComboBox ItemsSource="{Binding Path=Fajok}" SelectedItem="{Binding Path=SelectedFaj}" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" Width="244" Height="28"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="219,51,0,0" VerticalAlignment="Top" Width="105" FontSize="12" Click="Cancel_Click" Height="28"/>

    </Grid>
</Window>
